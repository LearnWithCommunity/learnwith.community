{
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "h",
        "module": "esnext",
        "target": "ES2020",
        "declaration": false,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "allowUnreachableCode": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "ES2019"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
